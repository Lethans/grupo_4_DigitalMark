  <section class="row">
    <section class="col-12 col-md-12 col-lg-12">

      <div class="card">
        <div class="card-header">
          <nav class="header-navigation">

            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/" style="text-decoration: none;">Inicio</a></li>
              <li class="breadcrumb-item"><a href="/categorias" style="text-decoration: none;">Notebooks y PC</a></li>
              <li class="breadcrumb-item"><a href="/categorias" style="text-decoration: none;">Notebooks</a></li>
              <li class="breadcrumb-item active" aria-current="page">Notebook 2en1 EXO TW7 Intel Atom</li>
            </ol>

            <div class="btn-group">
              <a href="" class="btn btn-link btn-share;" style="text-decoration: none;">Compartir</a>
              <a href="" class="btn btn-link btn-share;" style="text-decoration: none;">Favoritos</a>
            </div>
          </nav>
        </div>

        <div class="card-body store-body row">

          <ul class="thumbnails-list">
            <li class="thumbnails-item"><img class="img-fluid" src="./img/1.jpg" alt=""></li>
            <li class="thumbnails-item"><img class="img-fluid" src="./img/2.jpg" alt=""></li>
            <li class="thumbnails-item"><img class="img-fluid" src="./img/3.jpg" alt=""></li>
          </ul>

          <div class="product-gallery-featured col-md-5 col-12 text-center px-0">
            <img class="img-fluid" src="./img/1.jpg" alt="">
          </div>

          <div class="product-payment col-md-5 col-12">
            <h4 class="product-title">Notebook 2en1 EXO TW7 Intel Atom</h4>
            <h2 class="product-price display-4">$32.999</h2>
            <p class="text-success"><i class="fa fa-credit-card"></i>Pagá con todos los medios</p>
            <p class="mb-0"><i class="fa fa-truck"></i>Retiro ¡GRATIS! <a href="#" style="text-decoration: none;">Ver
                sucursales</a></p>
            <p class="mb-0"><i class="fa fa-truck"></i>Envío rápido a todo el país <li style="list-style-type: none;"><a
                  href="#" style="text-decoration: none;">Calcular costo de
                  envío</a></li>
            </p>
            <label for="quant">Cantidad</label>
            <input type="number" name="quantity" min="1" id="quant" class="form-control mb-5 input-lg"
              placeholder="Elegí cantidad">
            <button class="btn btn-primary btn-lg btn-block">Comprar</button>
          </div>

          <div class="product-description col-md-4 col-12">
            <h2 style="margin-bottom: 40px;">Especificaciones</h2>
            <dl class="row mb-4">
              <dt class="col-sm-5">Marca</dt>
              <dd class="col-sm-7">EXO</dd>
              <dt class="col-sm-5">Modelo</dt>
              <dd class="col-sm-7">Red</dd>
              <dt class="col-sm-5">Procesador</dt>
              <dd class="col-sm-7">1.1GHz</dd>
              <dt class="col-sm-5">Memoria Ram</dt>
              <dd class="col-sm-7">2 GB</dd>
            </dl>
          </div>

          <div class="product-description col-md-4 col-12">
            <h2 style="margin-bottom: 40px;"><br></h2>
            <dl class="row mb-4">
              <dt class="col-sm-5">Disco Rígido</dt>
              <dd class="col-sm-7">240GB</dd>
              <dt class="col-sm-5">Pantalla</dt>
              <dd class="col-sm-7">15.6 "</dd>
              <dt class="col-sm-5">Sistema Operativo</dt>
              <dd class="col-sm-7">Windows 10</dd>
              <dt class="col-sm-5">Memoria Integrada</dt>
              <dd class="col-sm-7">SI</dd>
            </dl>
          </div>

          <div class="product-description col-md-4 col-12">
            <h2 style="margin-bottom: 40px;"><br></h2>
            <dl class="row mb-4">
              <dt class="col-sm-5">Wi-Fi</dt>
              <dd class="col-sm-7">SI</dd>
              <dt class="col-sm-5">Salida HDMI</dt>
              <dd class="col-sm-7">SI</dd>
              <dt class="col-sm-5">Puerto de Red</dt>
              <dd class="col-sm-7">SI</dd>
              <dt class="col-sm-5">Salida VGA</dt>
              <dd class="col-sm-7">NO</dd>
            </dl>
          </div>

        </div>
      </div>

    </section>
  </section>


