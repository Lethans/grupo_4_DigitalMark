<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Rompe si se saca de esta seccion -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css'>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>

    <%- include('../partials/headHome')%>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
        integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/register.css">

    <title>Registrate</title>
</head>

<body>

    <main class="container-fluid">

        <%- include('../partials/navBar')%>


        <div class="row col-12 col-md-12 col-lg-12" style="margin:0px">

            <div class="form-group col-12" style="text-align:center">

                <div class="container">

                    <div class="d-flex justify-content-center h-100">
                        <form action="/register" method="post" enctype="multipart/form-data">

                            <div class="card">
                                <div class="card-header">
                                    <h3>Registrarse</h3>

                                    <h6 class="modal-title p-login" style="text-align:center;padding: 0px;">¿Ya tenés
                                        cuenta? <a href='/login' style="color: orange;">Ingresá</a></h6>

                                </div>
                                <div class="card-body">


                                    <% if(typeof errors != 'undefined' && errors.first_name){%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend ">
                                            <span class="input-group-text" style="background-color: tomato;">
                                                <i class="fas fa-user error_icon"></i></span>
                                        </div>
                                        <input type="text" name="first_name" class="form-control error_text"
                                            placeholder="<%= errors.first_name.msg %>"
                                            value="<%= typeof old != 'undefined' ? old.first_name : '' %>">
                                    </div>
                                    <%}else{%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" name="first_name" class="form-control" placeholder="Nombre"
                                            value="<%= typeof old != 'undefined' ? old.first_name : '' %>">
                                    </div>
                                    <%}%>






                                    <% if(typeof errors != 'undefined' && errors.last_name){%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend ">
                                            <span class="input-group-text" style="background-color: tomato;">
                                                <i class="fas fa-user error_icon"></i></span>
                                        </div>
                                        <input type="text" name="last_name" class="form-control error_text"
                                            placeholder="<%= errors.last_name.msg %>" value="">
                                    </div>
                                    <%}else{%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" name="last_name" class="form-control" placeholder="Apellido"
                                            value="<%= typeof old != 'undefined' ? old.last_name : '' %>">
                                    </div>
                                    <%}%>


                                        <% if(typeof errors != 'undefined' && errors.email){%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend ">
                                            <span class="input-group-text" style="background-color: tomato;">
                                                <i class="fas fa-envelope error_icon"></i></span>
                                        </div>
                                        <input type="email" name="email" class="form-control error_text"
                                            placeholder="<%= errors.email.msg %>" value="">
                                    </div>
                                    <%}else{%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        </div>
                                        <input type="email" name="email" class="form-control" placeholder="Email"
                                            value="<%= typeof old != 'undefined' ? old.email : '' %>">
                                    </div>
                                    <%}%>



                                    <% if(typeof errors != 'undefined' && errors.password){%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend ">
                                            <span id="first_eyeError" class="input-group-text"
                                                style="background-color: tomato;">
                                                <i class="fas fa-eye-slash error_icon"></i></span>
                                        </div>
                                        <input type="password" name="password"
                                            class="form-control error_text first_password"
                                            placeholder="<%= errors.password.msg %>" value="">
                                    </div>
                                    <%}else{%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span id="first_eye" class="input-group-text"><i
                                                    class="fas fa-eye-slash"></i></span>
                                        </div>
                                        <input type="password" name="password" class="form-control first_password"
                                            placeholder="Contraseña"
                                            value="<%= typeof old != 'undefined' ? old.email : '' %>">
                                    </div>
                                    <%}%>
    



                                        <% if(typeof errors != 'undefined' && errors.confirm_password){%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend ">
                                            <span id="second_eyeError" class="input-group-text"
                                                style="background-color: tomato;">
                                                <i class="fas fa-eye-slash error_icon"></i></span>
                                        </div>
                                        <input type="password" name="confirm_password"
                                            class="form-control error_text second_password"
                                            placeholder="<%= errors.confirm_password.msg %>" value="">
                                    </div>
                                    <%}else{%>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span id="second_eye" class="input-group-text"><i
                                                    class="fas fa-eye-slash"></i></span>
                                        </div>
                                        <input type="password" name="confirm_password"
                                            class="form-control second_password" placeholder="Contraseña"
                                            value="<%= typeof old != 'undefined' ? old.email : '' %>">
                                    </div>
                                    <%}%>
                                    
                                <div class="form-group">
                                    <select class="controls form-control country" id="provincia" name="provincia">
                                        <option disabled selected>Seleccione su provincia</option>
                                        <% provincias.forEach(prov => { %>
                                    <option value="<%= typeof old != 'undefined' ? old.provincia : prov.id %>">
                                        <%= prov.nombre %>
                                    </option>
                                    <% }); %>
                                    </select>
                                </div>


                                <div class="custom-file">
                                    <input type="file" name="avatar" id="img" style="display:none;" />
                                    <label for="img" class="profile_pic">
                                        <i class="far fa-images"></i>
                                        Subi tu foto</label>
                                </div>
                                <% if(typeof errors != 'undefined' && errors.avatar){%>
                                <p style="font-weight: bold;margin-top: 10px;" class="text-danger">
                                    <%= errors.avatar.msg %></p>
                                <%}%>


                            </div>
                            <div class="form-group card-footer">
                                <input type="submit" value="Registrar" class="btn float-right login_btn">
                            </div>

                        </form>



                </div>
            </div>
        </div>
    </div>





    <script>
        let password = document.querySelector('.first_password');
        let eye = document.getElementById('first_eye');

        let confirmPassword = document.querySelector('.second_password');
        let confirmEye = document.getElementById('second_eye');

        eye.addEventListener('click', function () {
            if (password.getAttribute('type') == 'password') {
                password.setAttribute('type', 'text');
                eye.children[0].classList.remove('fa-eye-slash');
                eye.children[0].classList.add('fa-eye');
            } else {
                password.setAttribute('type', 'password');
                eye.children[0].classList.remove('fa-eye');
                eye.children[0].classList.add('fa-eye-slash');
            }
        })

        confirmEye.addEventListener('click', function () {
            if (confirmPassword.getAttribute('type') == 'password') {
                confirmPassword.setAttribute('type', 'text');
                confirmEye.children[0].classList.remove('fa-eye-slash');
                confirmEye.children[0].classList.add('fa-eye');
            } else {
                confirmPassword.setAttribute('type', 'password');
                confirmEye.children[0].classList.remove('fa-eye');
                confirmEye.children[0].classList.add('fa-eye-slash');
            }
        })
    </script>
    </main>
    <%- include('../partials/boostrapScripts')%>

</body>

</html>